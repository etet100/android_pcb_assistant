<resources>

    <!-- Base application theme. -->
    <style name="Facebook.Button" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">#FF4E50</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppCompatAlertDialogStyle" parent="@android:style/Theme.Holo.Dialog">
        <item name="colorAccent">#5fa3d0</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:background">#FFFFFF</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat" >
        <item name="colorAccent">@color/accent_material_dark_1</item>
    </style>

    <style name="MyTheme_Dialog" parent="Theme.AppCompat.Dialog" >
        <item name="colorAccent">@color/accent_material_dark_2</item>
    </style>

</resources>

